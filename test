    local SugF=_New("ScrollingFrame",{Parent=M,Size=UDim2.new(0,150,0,120),Position=UDim2.new(0,40,1,-160),BackgroundColor3=Color3.fromRGB(30,30,30),Visible=false,Cr=6,ScrollBarThickness=2,ZIndex=20,AutomaticCanvasSize=Enum.AutomaticSize.Y,CanvasSize=UDim2.new(0,0,0,0)})
    _New("UIListLayout",{Parent=SugF,Padding=UDim.new(0,2)})

